{
  "name": "ftboilerplate",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "test": "jest",
    "lint": "eslint ."
  },
  "dependencies": {
    "antd": "^3.1.3",
    "autoprefixer": "^7.2.5",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-import": "^1.1.1",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^1.0.3",
    "classnames": "^2.2.5",
    "indexof": "0.0.1",
    "jest-cli": "^22.0.6",
    "moment": "^2.20.1",
    "postcss-less": "^1.1.3",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-intl": "^2.4.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "simpl-schema": "^1.4.1"
  },
  "devDependencies": {
    "@meteorjs/eslint-config-meteor": "^1.0.5",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.0.6",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.15.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-meteor": "^0.4.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-meteor": "^4.1.6",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^22.0.6",
    "jest-enzyme": "^4.0.2"
  },
  "babel": {
    "presets": ["env", "react", "stage-2"]
  },
  "eslintIgnore": ["jquery.min.js", "snap.svg-min.js"],
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
      }
    },
    "plugins": ["meteor", "react", "jsx-a11y"],
    "extends": [
      "plugin:meteor/guide",
      "@meteorjs/eslint-config-meteor",
      "plugin:react/recommended",
      "eslint:recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "mocha": true
    },
    "globals": {
      "server": false,
      "browser": false,
      "expect": false,
      "jest": false
    },
    "rules": {
      "react/forbid-prop-types": [
        "error",
        {
          "forbid": ["any", "array"]
        }
      ],
      "no-console": 1,
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id",
            "_ensureIndex",
            "_verifyEmailToken",
            "_resetPasswordToken",
            "_name",
            "_options"
          ]
        }
      ],
      "semi": ["error", "never"],
      "no-trailing-spaces": [
        "error",
        {
          "ignoreComments": true
        }
      ],
      "comma-dangle": ["error", "always-multiline"],
      "key-spacing": ["error"],
      "space-before-function-paren": ["error", "always"],
      "comma-spacing": [
        "error",
        {
          "before": false,
          "after": true
        }
      ],
      "prefer-arrow-callback": "error",
      "array-bracket-spacing": ["error", "always"],
      "object-curly-spacing": ["error", "always"]
    }
  }
}
